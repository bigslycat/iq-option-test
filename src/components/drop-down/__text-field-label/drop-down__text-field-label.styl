.drop-down__text-field-label
  position: absolute
  margin: -.5em 0 0 1em
  padding: 0 .5em 0 .5em
  background: #fff
  top: 50%
  left: 0
  bottom: 0
  line-height: 1em
  height: 1em
  cursor: text
  z-index: 2

  transition: all 300ms

  &_open_up
    display: none

  &_open_down
    top: 0
    cursor: default
